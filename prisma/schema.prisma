datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum PostType {
    link
}

generator client {
    previewFeatures = ["filterJson"]
    provider = "prisma-client-js"
}

model Post {
    id        Int      @id @default(autoincrement())
    // Fields
    body      String?
    tags      String[]
    type      PostType
    // Relations
    url       Url?     @relation(fields: [urlId], references: [id])
    urlId     Int?
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Url {
    id        Int      @id @default(autoincrement())
    // Fields
    meta      Json     @default("{}")
    parsed    Json     @default("{}")
    url       String   @unique
    // Relations
    posts     Post[]
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
