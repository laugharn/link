datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum PostType {
    link
}

enum UserType {
    user
}

generator client {
    previewFeatures = ["filterJson", "nApi"]
    provider        = "prisma-client-js"
}

model Pass {
    id        String   @id @default(cuid())
    // Fields
    code      String   @unique
    email     String
    redirect  String?
    version   Int      @default(1)
    // Relations
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    expiresAt DateTime
}

model Post {
    id        Int      @id @default(autoincrement())
    // Fields
    body      String?
    tags      String[]
    type      PostType
    version   Int      @default(1)
    // Relations
    url       Url?     @relation(fields: [urlId], references: [id])
    urlId     Int?
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Url {
    id        Int      @id @default(autoincrement())
    // Fields
    meta      Json     @default("{}")
    parsed    Json     @default("{}")
    url       String   @unique
    version   Int      @default(1)
    // Relations
    posts     Post[]
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model User {
    id          Int      @id @default(autoincrement())
    // Fields
    description String?
    email       String   @unique
    name        String?
    types       UserType[]
    version     Int      @default(1)
    // Relations
    passes      Pass[]
    posts       Post[]
    urls        Url[]
    // Timestamps
    createdAt   DateTime @default(now())
}
