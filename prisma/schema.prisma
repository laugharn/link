datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum PostType {
    link
}

generator client {
    previewFeatures = ["filterJson"]
    provider        = "prisma-client-js"
}

model Pass {
    id        String   @id @default(cuid())
    // Fields
    code      String   @unique
    email     String
    redirect  String?
    // Relations
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    expiresAt DateTime
}

model Post {
    id        Int      @id @default(autoincrement())
    // Fields
    body      String?
    tags      String[]
    type      PostType
    // Relations
    url       Url?     @relation(fields: [urlId], references: [id])
    urlId     Int?
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Url {
    id        Int      @id @default(autoincrement())
    // Fields
    meta      Json     @default("{}")
    parsed    Json     @default("{}")
    url       String   @unique
    // Relations
    posts     Post[]
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model User {
    id        Int      @id @default(autoincrement())
    // Fields
    email     String   @unique
    // Relations
    passes    Pass[]
    posts     Post[]
    urls      Url[]
    // Timestamps
    createdAt DateTime @default(now())
}
